<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPatternFragment"
    android:background="@color/lighter">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/add_pattern"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="64dp"
            android:text="@string/add_new_pattern"
            android:textAlignment="center"
            android:textColor="@color/darker"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/add_pattern_title"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:autofillHints="Classic A-line Skirt"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/add_pattern_title"
            android:inputType="text"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_pattern" />

        <EditText
            android:id="@+id/add_pattern_desc"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:autofillHints="Lorem ipsum dolor sit amet."
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/add_pattern_description"
            android:inputType="text"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_pattern_title" />

        <EditText
            android:id="@+id/add_pattern_materials"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:autofillHints="Scissors, cotton fabric"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/add_pattern_materials"
            android:inputType="text"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_pattern_desc" />

        <EditText
            android:id="@+id/add_pattern_instructions"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:autofillHints="Cut the fabric. Sew the fabric."
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/add_pattern_instructions"
            android:inputType="text"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_pattern_materials" />

        <Button
            android:id="@+id/add_pattern_btn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="64dp"
            android:backgroundTint="@color/accent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/save_pattern"
            android:textColor="@color/lightest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_pattern_instructions" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>